<% provide :title, t('.title') %>
<div id="clearance" class="sign-in flex">

  <div class="col-6">
    <h2><%= t(".title") %></h2>
    <%= render partial: '/sessions/form' %>
  </div>

  <% if Clearance.configuration.allow_sign_up? %>
    <div class="col alternative-registration">
      <h2><%=t('.new_to_diversity_tickets') %></h2>
      <%= link_to sign_up_path do %>
        <div class="btn btn-edit"><%=t('.create_your_account') %></div>
      <% end %>
    </div>
  <% end %>

</div>
